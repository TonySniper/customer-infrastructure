{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateSettings": {
            "type": "object",
            "metadata": {
                "description": "Common arm template settings: appName, templateBaseUrl and environment"
            }
        },
        "containerName": {
            "type": "string"
        },
        "sku": {
            "type": "object"
        }
    },
    "functions": [],
    "variables": {
        "storageAccountDeploymentName": "deployStorageAccount"
    },
    "resources": [
        {
            "name": "[variables('storageAccountDeploymentName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('templateSettings').templateBaseUrl, '/nested/StorageAccount/StorageAccount.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appName": {
                        "value": "[parameters('templateSettings').appName]"
                    },
                    "environment": {
                        "value": "[parameters('templateSettings').environment]"
                    },
                    "sku": {
                        "value": "[parameters('sku')]"
                    }
                }
            }
        },
        {
            "name": "deployBlobContainer",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(parameters('templateSettings').templateBaseUrl, '/nested/StorageAccount/BlobContainer.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "containerName": {
                        "value": "[parameters('containerName')]"
                    },
                    "storageAccountName": {
                        "value": "[reference(variables('storageAccountDeploymentName')).outputs.storageAccountName.value]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}