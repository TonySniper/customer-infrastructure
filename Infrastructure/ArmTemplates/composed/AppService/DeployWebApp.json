{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateSettings": {
            "type": "object",
            "metadata": {
                "description": "Common arm template settings: appName, templateBaseUrl and environment"
            }
        },
        "appServicePlanSettings": {
            "type": "object"
        },
        "keyVaultName": {
            "type": "string"
        },
        "secretName": {
            "type": "string",
            "metadata": {
                "description": "description"
            }
        }
    },
    "functions": [],
    "variables": {
        "appServicePlanTemplateUrl": "[concat(parameters('templateSettings').templateBaseUrl, '/nested/AppServicePlan/WindowsAppServicePlan.json')]",
        "webAppTemplateUrl": "[concat(parameters('templateSettings').templateBaseUrl, '/nested/WebApp/WindowsWordPressAppService.json')]",

        "appServicePlanDeploymentName": "deployAppServicePlan"
    },
    "resources": [
        {
            "name": "[variables('appServicePlanDeploymentName')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('appServicePlanTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "sku": {
                        "value": "[parameters('appServicePlanSettings').sku]"
                    },
                    "appName": {
                        "value": "[parameters('templateSettings').appName]"
                    }
                }
            }
        },
        {
            "name": "deployWebApp",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "dependsOn": [
                "deployAppServicePlan"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('webAppTemplateUrl')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appName": {
                        "value": "[parameters('templateSettings').appName]"
                    },
                    "environment": {
                        "value": "[parameters('templateSettings').environment]"
                    },
                    "connectionString": {
                        "reference": {
                            "keyVault": {
                                "id": "[resourceId(subscription().subscriptionId, resourceGroup().name, 'Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
                            },
                            "secretName": "[parameters('secretName')]"
                        }
                    },
                    "appServicePlanName": {
                        "value": "[reference(variables('appServicePlanDeploymentName')).outputs.appServicePlanName.value]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}