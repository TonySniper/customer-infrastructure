{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "templateBaseUrl": {
            "type": "string"
        },
        "primaryLocation": {
            "type": "string"
        },
        "secondaryLocation": {
            "type": "string"
        },
        "primaryLocationShortName": {
            "type": "string"
        },
        "secondaryLocationShortName": {
            "type": "string"
        },
        "appName": {
            "type": "string"
        }
    },
    "functions": [],
    "variables": {
        "primaryRgName": "[concat('rg-', parameters('appName'), '-', parameters('primaryLocationShortName'))]",
        "secondaryRgName": "[concat('rg-', parameters('appName'), '-', parameters('secondaryLocationShortName'))]",

        "rgTemplateUrl": "[uri(parameters('templateBaseUrl'), 'nested/ResourceGroup/ResourceGroup.json')]" 
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "createPrimaryRg",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('rgTemplateUrl')]"
                }
            }
        }
    ],
    "outputs": {}
}